{
  "name": "student-request-manager",
  "version": "1.0.0",
  "private": true,
  "description": "Student Request Management Tool",
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "npm run dev -w server",
    "dev:client": "npm run dev -w client",
    "build": "npm run db:generate && npm run build -w server && npm run build -w client",
    "start": "npm run db:migrate:deploy && npm start -w server",
    "db:generate": "npm run -w server db:generate",
    "db:migrate:deploy": "npm run -w server db:migrate:deploy",
    "db:push": "npm run -w server db:push",
    "db:studio": "npm run -w server db:studio",
    "db:seed": "npm run seed -w server",
    "postinstall": "npm run db:generate"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  },
  "engines": {
    "node": "22.x"
  }
}
