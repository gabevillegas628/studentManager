{
  "name": "student-request-manager",
  "version": "1.0.0",
  "private": true,
  "description": "Student Request Management Tool",
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "npm run dev -w server",
    "dev:client": "npm run dev -w client",
    "build": "npm run db:generate && npm run build -w server && npm run build -w client",
    "start": "npm run db:migrate:deploy && npm start -w server",
    "db:generate": "npx prisma generate --schema=server/prisma/schema.prisma",
    "db:migrate:deploy": "npx prisma migrate deploy --schema=server/prisma/schema.prisma",
    "db:push": "npx prisma db push --schema=server/prisma/schema.prisma",
    "db:studio": "npx prisma studio --schema=server/prisma/schema.prisma",
    "db:seed": "npm run seed -w server",
    "postinstall": "npm run db:generate"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
